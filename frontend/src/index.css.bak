/* Reset bÃ¡sico */
* { box-sizing: border-box; }
html, body, #root { height: 100%; margin: 0; }

/* Dark global */
:root { color-scheme: dark; }

body {
  background: #0f0f10;     /* quase preto */
  color: #e8e8ea;          /* texto claro */
  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, "Helvetica Neue", Arial, "Noto Sans";
  line-height: 1.4;
}

/* Containers comuns (ajuste se usar outras classes) */
.container { max-width: 1200px; margin: 0 auto; padding: 24px; }

.card {
  background: #16171a;
  border: 1px solid #23252a;
  border-radius: 12px;
  padding: 16px;
}

/* TÃ­tulos */
h1, h2, h3 { color: #f5f5f7; margin: 0 0 12px; }

/* Links */
a { color: #a78bfa; }
a:hover { color: #c4b5fd; }

/* Bordas dos grÃ¡ficos, se estiverem â€œclarosâ€ demais */
.recharts-wrapper { background: transparent; }

